<section class="card">
  <ul>
    <li><img src="<%= book.image_url %>"></li>
    <li><h2><%= book.title %></h2></li>
    <li><p><%= book.author %><p></li>
    <% if (route === '/') { %>
      <li><a href="/books/<%= book.id %>">View Details</a></li>

    <% } else { %>

      <li><p><%= book.description %></p></li>
      <li><p>ISBN: <%= book.isbn %></p></li>
      <% if (book.id) {%>
        <li><p>Bookshelf: <%= book.bookshelf %></p></li> 
      <% } else { %>
        <li><a href="#" type="button" class="selectButton" id="<%= 'button' + index %>" >Select this book</a></li>
      <% } %>
    <% } %>
  </ul>
</section>