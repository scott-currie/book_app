<form action="<%= route %>" method="POST" style="display: none" id="<%= 'form' + index %>">
    <input type="text" name="title" placeholder="<%= book.title %>">
    <input type="text" name="author" placeholder="<%= book.author %>">
    <input type="text" name="isbn" placeholder="<%= book.isbn %>">
    <input type="text" name="image_url" placeholder="<%= book.image_url%>">
    <input type="text" name="description" placeholder="<%= book.description %>">
    <input type="text" name="bookshelf" placeholder="Enter a Bookshelf Name">
    <input type="submit" value="Add to Database">
</form>